NODE_ENV=development
PORT=5000

# MongoDB Configuration
# Option 1: Local MongoDB (default)
MONGODB_URI=mongodb://localhost:27017/nafsyetak-clinic

# Option 2: MongoDB Atlas (Cloud) - Uncomment and update with your credentials
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nafsyetak-clinic?retryWrites=true&w=majority

# Option 3: Docker MongoDB - Uncomment to use
# MONGODB_URI=mongodb://localhost:27017/nafsyetak-clinic

JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-secure
JWT_EXPIRE=7d

# Email configuration (optional - for contact form)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Admin credentials
ADMIN_EMAIL=admin@nafsyetak.com
ADMIN_PASSWORD=admin123